<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.5" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChatController">
   <items>
      <ScrollPane minHeight="200.0">
         <VBox fx:id="chatVBox" maxHeight="Infinity" maxWidth="Infinity" />
      </ScrollPane>
      <HBox alignment="CENTER_LEFT">
         <children>
            <TextArea fx:id="messageTextArea">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextArea>
            <Button fx:id="sendButton" minHeight="25.0" minWidth="60.0" mnemonicParsing="false" text="Envoyer">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </items>
</SplitPane>
